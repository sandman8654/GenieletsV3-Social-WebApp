      Email us : <a href="mailto:CS@genielets.com">info@genielets.com</a>
  .col-lg-6.col-md-6.col-sm-6
    .pull-right
      %ul.top-menu#top-menu
        - if user_signed_in?
          %li
            = link_to dashboard_path do
              %i.icon-user
              My Account
            or
            = link_to 'Sign Out', destroy_user_session_path, method: :delete
        - else
          %li
            Sign up
            = link_to 'as a Landlord', new_user_registration_path(type: User::LANDLORD)
            or
            = link_to 'as a Tenant', new_user_registration_path(type: User::TENANT)
            , Have an account already?
            = link_to 'Login Here', new_user_session_path
