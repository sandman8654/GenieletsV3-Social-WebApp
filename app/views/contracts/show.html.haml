.row
  .col-sm-12
    .page-header
      %h1
        View Contract
        %small Contract Details and Summary

.row
  .col-sm-12
    .tab-content
      .row
        .col-sm-4
          .user-left
            %table.table.table-condensed.table-hover
              %thead
                %tr
                  %th{:colspan => "3"} Contract Information
              %tbody
                %tr
                  %td property name:
                  %td
                    = @contract.property.name
                  %td
                    = link_to edit_property_path(@contract.property) do
                      %i.fa.fa-pencil.edit-user-info
                %tr
                  %td room number:
                  %td= @contract.room_number
                  %td
                    = link_to edit_contract_path(@contract) do
                      %i.fa.fa-pencil.edit-user-info
                %tr
                  %td contract start date:
                  %td= @contract.start_date
                  %td
                    = link_to edit_contract_path(@contract) do
                      %i.fa.fa-pencil.edit-user-info
                %tr
                  %td contract end date:
                  %td= @contract.end_date
                  %td
                    = link_to edit_contract_path(@contract) do
                      %i.fa.fa-pencil.edit-user-info
                %tr
                  %td rental amount:
                  %td= @contract.rental
                  %td
                    = link_to edit_contract_path(@contract) do
                      %i.fa.fa-pencil.edit-user-info
                %tr
                  %td pay date:
                  %td= @contract.pay_date
                  %td
                    = link_to edit_contract_path(@contract) do
                      %i.fa.fa-pencil.edit-user-info
            .pull-right
              = link_to edit_contract_path(@contract), class: 'btn btn-info btn-squared btn-lg' do
                Edit Contract
                %i.fa.fa-eye
        .col-sm-4
          %table.table.table-condensed.table-hover
            %thead
              %tr
                %th{:colspan => "2"} Landlord Information
            %tbody
              %tr
                %td{:colspan => "2"}
                  .center
                    %h4= @contract.landlord.name
                    .user-image
                      .fileupload-new.thumbnail
                        = image_tag @contract.landlord.avatar.url(:medium)
              %tr
                %td address:
                %td= @contract.landlord.address
              %tr
                %td phone:
                %td= @contract.landlord.phone
              %tr
                %td company name:
                %td= @contract.landlord.company_name.presence || 'N/A'
              %tr
                %td company description:
                %td= @contract.landlord.company_desc.presence || 'N/A'
              %tr
                %td vat number:
                %td= @contract.landlord.vat_number.presence || 'N/A'
        .col-sm-4
          %table.table.table-condensed.table-hover
            %thead
              %tr
                %th{:colspan => "2"} Tenant Information
            %tbody
              - if @contract.tenant.nil?
                %tr
                  %td name:
                  %td= @tenant_info[:name]
              - else
                %tr
                  %td{:colspan => "2"}
                    .center
                      %h4= @tenant_info[:name]
                      .user-image
                        .fileupload-new.thumbnail
                          = image_tag @contract.tenant.avatar.url(:medium)
                %tr
                  %td gender:
                  %td= @contract.tenant.gender
              %tr
                %td email:
                %td= @tenant_info[:email]
              %tr
                %td phone:
                %td= @tenant_info[:phone] || 'N/A'
              %tr
                %td notes:
                %td= @tenant_info[:notes] || 'N/A'
