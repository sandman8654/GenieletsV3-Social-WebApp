.row
  .col-sm-12
    .page-header
      %h1
        Payment Dues
        %small Outstanding Payments Not Yet Paid
.row
  .col-sm-12
    = render 'shared/messages'
.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %i.fa.fa-external-link-square
        Outstanding Payments (Unpaid Dues)
        .panel-tools
          = link_to new_private_payment_path, class: 'btn btn-success btn-xs' do
            %i.fa.fa-plus
            New Line
          %a.btn.btn-xs.btn-link.panel-collapse.collapses{:href => "#"}
          %a.btn.btn-xs.btn-link.panel-refresh{:href => "#"}
            %i.fa.fa-refresh
      .panel-body
        %table#properties-table.table.table-striped.table-bordered.table-hover.table-full-width
          %thead
            %tr
              %th Property
              %th Pay Date
              %th Amount
              %th Actions
          %tbody
            - @private_payments.each do |p|
              %tr
                %td= p.property.name
                %td= p.date_paid
                %td= p.precise_amount
                %td
                  = link_to edit_private_payment_path(p), class: 'btn btn-purple' do
                    %i.fa.fa-pencil
                  = link_to private_payment_path(p), class: 'btn btn-danger', method: :delete, 'data-confirm' => 'Are you sure?' do
                    %i.fa.fa-times.fa-white