.box-register
  %h3 Change your password
  %p
    Enter your password below:
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = render 'devise/shared/errors'
    = f.hidden_field :reset_password_token
    %fieldset
      .form-group
        %span.input-icon
          %input#password.form-control{:name => "user[password]", :placeholder => "Password", :type => "password"}
            %i.fa.fa-lock
      .form-group
        %span.input-icon
          %input.form-control{:name => "user[password_again]", :placeholder => "Password Again", :type => "password"}
            %i.fa.fa-lock
      .form-actions
        %button.btn.btn-bricky.pull-right{:type => "submit"}
          Change my password
          %i.fa.fa-arrow-circle-right
  = render 'devise/shared/links'